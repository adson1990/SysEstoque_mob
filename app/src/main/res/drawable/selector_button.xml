<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_800"/> <!-- Cor de fundo quando pressionado -->
            <corners android:radius="@dimen/size_15dp"/> <!-- Bordas arredondadas -->
            <padding android:left="@dimen/size_15dp" android:top="@dimen/size_8dp"
                     android:right="@dimen/size_15dp" android:bottom="@dimen/size_8dp"/>
         <!--   <size android:width="wrap_content" android:height="wrap_content"/> -->
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_300"/> <!-- Cor de fundo normal -->
            <corners android:radius="@dimen/size_10dp"/> <!-- Bordas arredondadas -->
            <padding android:left="@dimen/size_15dp" android:top="@dimen/size_8dp"
                     android:right="@dimen/size_15dp" android:bottom="@dimen/size_8dp"/>
          <!--  <size android:width="wrap_content" android:height="wrap_content"/> -->
        </shape>
    </item>
</selector>